<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingStart="16dp"
    android:paddingTop="32dp"
    android:paddingEnd="16dp"
    android:paddingBottom="32dp"
    tools:context=".MainActivity"
    tools:ignore="HardcodedText">

    <View
        android:id="@+id/line_jerry"
        android:layout_width="1px"
        android:layout_height="128dp"
        android:layout_marginEnd="64dp"
        android:layout_marginRight="64dp"
        android:background="@color/colorAccent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <ImageView
        android:id="@+id/iv_jerry"
        android:layout_width="48dp"
        android:layout_height="48dp"
        android:contentDescription="jerry"
        android:src="@drawable/avatar_jerry"
        app:layout_constraintBottom_toBottomOf="@id/line_jerry"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@id/line_jerry" />

    <TextView
        android:id="@+id/tv_jerry_received"
        android:layout_width="0dp"
        android:layout_height="48dp"
        android:background="@drawable/bg_rectangle_accent_border"
        android:gravity="center_vertical|end"
        android:paddingStart="8dp"
        android:paddingLeft="8dp"
        android:paddingEnd="8dp"
        android:paddingRight="8dp"
        app:layout_constraintEnd_toEndOf="@id/line_jerry"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@id/line_jerry" />

    <EditText
        android:id="@+id/et_jerry_posted"
        android:layout_width="0dp"
        android:layout_height="48dp"
        android:background="@drawable/bg_rectangle_accent_border"
        android:gravity="center_vertical|end"
        android:hint="input jerry's message"
        android:paddingStart="8dp"
        android:paddingLeft="8dp"
        android:paddingEnd="8dp"
        android:paddingRight="8dp"
        app:layout_constraintBottom_toBottomOf="@id/line_jerry"
        app:layout_constraintEnd_toEndOf="@id/line_jerry"
        app:layout_constraintStart_toStartOf="parent" />


    <View
        android:id="@+id/line_tom"
        android:layout_width="1px"
        android:layout_height="128dp"
        android:layout_marginStart="64dp"
        android:layout_marginLeft="64dp"
        android:layout_marginBottom="32dp"
        android:background="@color/colorPrimary"
        app:layout_constraintBottom_toTopOf="@id/line_jerry"
        app:layout_constraintStart_toStartOf="parent" />


    <ImageView
        android:id="@+id/iv_tom"
        android:layout_width="48dp"
        android:layout_height="48dp"
        android:contentDescription="tom"
        android:src="@drawable/avatar_tom"
        app:layout_constraintBottom_toBottomOf="@id/line_tom"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@id/line_tom" />

    <TextView
        android:id="@+id/tv_tom_received"
        android:layout_width="0dp"
        android:layout_height="48dp"
        android:background="@drawable/bg_rectangle_primary_border"
        android:gravity="center_vertical|start"
        android:paddingStart="8dp"
        android:paddingLeft="8dp"
        android:paddingEnd="8dp"
        android:paddingRight="8dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="@id/line_tom"
        app:layout_constraintTop_toTopOf="@id/line_tom" />

    <EditText
        android:id="@+id/et_tom_posted"
        android:layout_width="0dp"
        android:layout_height="48dp"
        android:background="@drawable/bg_rectangle_primary_border"
        android:gravity="center_vertical|start"
        android:hint="input tom's message"
        android:paddingStart="8dp"
        android:paddingLeft="8dp"
        android:paddingEnd="8dp"
        android:paddingRight="8dp"
        app:layout_constraintBottom_toBottomOf="@id/line_tom"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="@id/line_tom" />


    <TextView
        android:id="@+id/tv_message_box"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_marginBottom="32dp"
        android:background="@drawable/bg_rectangle_grey_border"
        app:layout_constraintBottom_toTopOf="@id/tv_tom_received"
        app:layout_constraintTop_toTopOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>